<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_indicator">

    <TextView
        android:id="@+id/spisok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/textSizePhoneNumber"/>

    <ImageButton
        android:id="@+id/button_deselect_all"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"

        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/button_select_all"
        android:background="@color/colorFonPrimary"
        app:srcCompat="@android:drawable/ic_notification_clear_all" />


    <ImageButton
        android:id="@+id/button_select_all"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/colorFonPrimary"
        app:srcCompat="@android:drawable/checkbox_on_background" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/spisok"
        android:layout_marginTop="@dimen/default_indicator_margin_horizontal"
        android:background="@color/colorDivider" />

    <ListView
        android:id="@+id/brenduList"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/spisok"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

    </ListView>

    <TextView
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brenduList"
        android:gravity="right"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:text="@string/Close"
        android:textSize="18sp" />

</RelativeLayout>