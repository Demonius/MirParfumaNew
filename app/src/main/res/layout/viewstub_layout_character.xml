            android:src="@drawable/dot"/>

        <TextView
            android:paddingLeft="12dp"
            android:textSize="18sp"
            android:id="@+id/brend_contry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>