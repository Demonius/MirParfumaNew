<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewParfum"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:contentPadding="16dp">

    <ImageButton
        android:id="@+id/deleteTrashItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/colorFonPrimary"
        android:src="@android:drawable/ic_delete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageParfumTrash"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/banner2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/nameParfumTrash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="BREND"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/ratingBarTrash"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:rating="5"
                android:theme="@style/MyRatingBar" />

            <TextView
                android:id="@+id/cenaForTrash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:paddingTop="15dp"
                android:text="Ваша цена" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/priceParfumMinTrash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="120 р."
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Spinner

                    android:id="@+id/spinnerColTrash"
                    style="@style/TrashSpinner"
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/border_spinner"
                    android:dropDownWidth="60dp" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>