<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:actionButtonStyle">@style/myActionButtonStyle</item>-->
        <!--<item name="actionButtonStyle">@style/myActionButtonStyle</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textSize">@dimen/text_size_toolbar_title</item>
    </style>

    <style name="MyTextStyle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColorHighlight">@color/colorNavigationView</item>
        <item name="android:textColor">@color/colorFonPrimary</item>
        <item name="android:textSize">@dimen/textSizeNavigation</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="PhoneNumbertextStyle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColorHighlight">@color/colorNavigationView</item>
        <item name="android:textColor">@color/colorFonPrimary</item>
        <item name="android:textSize">@dimen/textSizePhoneNumber</item>
        <item name="android:typeface">sans</item>

    </style>

    <style name="TextStyleLayoutHome" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/textSizeHomeLayout</item>
        <item name="android:typeface">sans</item>

    </style>
    
    <style name="MyRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">21sp</item>
    </style>

    <!--<style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">-->
        <!--<item name="android:minWidth">25dp</item>-->
        <!--<item name="android:maxWidth">30dp</item>-->
        <!--<item name="android:width">30dp</item>-->
    <!--</style>-->

    <style name="MyText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation</item>
    </style>
    <style name="DownUpActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_animation</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorFonPrimary</item>
    </style>

    <style name="TrashSpinner" parent="android:Widget.Spinner">
        <item name="android:textSize">14sp</item>

    </style>

    <dimen name="textSizePhoneNumber">24sp</dimen>
    <dimen name="textSizeHomeLayout">17sp</dimen>
</resources>
